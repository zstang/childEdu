/* pages/user_question/user_question.wxss */

.page {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 导航栏样式 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding-top: 44px;
  z-index: 100;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.nav-back {
  padding: 0 30rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  padding-right: 88rpx;
}

/* 内容区域样式 */
.content {
  flex: 1;
  padding: 20rpx 30rpx;
  margin-top: calc(88rpx + 44px);
  margin-bottom: calc(140rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.placeholder-text text {
  display: block;
}

.question-input {
  width: 100%;
  min-height: 60vh;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  padding-right: 8rpx;
}

/* 按钮样式 */
.button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: linear-gradient(180deg, rgba(248,248,248,0) 0%, #f8f8f8 20%);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.next-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

.next-btn[disabled] {
  background-color: #a5d8bc;
  color: #fff;
}