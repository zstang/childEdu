/* pages/parents_knowledge/parents_knowledge.wxss */

page {
  height: 100%;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  padding: env(safe-area-inset-top) 30rpx 10rpx;
  box-sizing: border-box;
}

.back-btn {
  padding: 10rpx;
  margin-left: -10rpx;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
}

.nav-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  color: #333;
  margin-right: 60rpx;
}

.content {
  flex: 1;
  padding-top: calc(2rpx);
  box-sizing: border-box;
  width: 100%;
}

.knowledge-content {
  background: #fff;
  margin: 10rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.section {
  margin-bottom: 50rpx;
}

.section:last-child {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #2196F3;  /* 改为蓝色主题 */
}

.subsection {
  margin-bottom: 40rpx;
}

.subsection:last-child {
  margin-bottom: 0;
}

.subtitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #444;
  margin-bottom: 20rpx;
}

.paragraph {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
  margin-bottom: 20rpx;
  word-wrap: break-word;
  white-space: normal;
}

.paragraph-group {
  margin-bottom: 30rpx;
}

.paragraph-group:last-child {
  margin-bottom: 0;
}

/* iPhone notch screen adaptation */
@supports (padding-top: constant(safe-area-inset-top)) {
  .nav-bar {
    padding-top: calc(constant(safe-area-inset-top) + 60rpx);
  }
}

@supports (padding-top: env(safe-area-inset-top)) {
  .nav-bar {
    padding-top: calc(env(safe-area-inset-top) + 60rpx);
  }
}