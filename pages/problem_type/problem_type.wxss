/* pages/index/problem_type.wxss */
.page {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 0;
}

/* 自定义导航栏样式 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding-top: 44px; /* 适配iPhone状态栏 */
  z-index: 100;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.nav-back {
  padding: 0 30rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  padding-right: 88rpx; /* 为了保持标题居中 */
}

/* 内容区域样式 */
.header {
  margin-top: calc(88rpx + 44px);
  padding: 30rpx 30rpx;  
  text-align: center;
}

.title {
  font-size: 36rpx;  
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;  
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 问题列表样式 */
.problem-list {
  padding: 10rpx 30rpx;  
  padding-bottom: calc(180rpx + env(safe-area-inset-bottom));
}

.problem-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;  
  margin-bottom: 16rpx;  
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.problem-item.selected {
  background-color: #e8f7ef;
  border: 2rpx solid #07c160;
}

.problem-icon {
  font-size: 40rpx;  
  margin-right: 16rpx;  
  width: 64rpx;  
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 50%;
}

.problem-content {
  flex: 1;
}

.problem-title {
  font-size: 30rpx;  
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 6rpx;  
}

.problem-desc {
  font-size: 24rpx;  
  color: #666;
  display: block;
}

/* 按钮样式 */
.button-container {
  padding: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, rgba(248,248,248,0) 0%, #f8f8f8 20%);
}

.next-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

.next-btn[disabled] {
  background-color: #a5d8bc;
  color: #fff;
}

.knowledge-link {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 30rpx;
  padding: 20rpx;
}

.knowledge-link:active {
  opacity: 0.7;
}


/* 紧凑型header样式 */
.header.compact {
  margin-top: calc(88rpx + 44px);
  padding: 24rpx 30rpx;
}

.header.compact .title {
  font-size: 34rpx;
  margin-bottom: 8rpx;
}

.header.compact .subtitle {
  font-size: 24rpx;
}

/* 紧凑型列表样式 */
.problem-list.compact {
  padding: 10rpx 30rpx;
}

/* 紧凑型问题项样式 */
.problem-item.compact {
  padding: 16rpx 20rpx;
  margin-bottom: 12rpx;
}

/* 紧凑型图标样式 */
.problem-icon.compact {
  font-size: 36rpx;
  width: 60rpx;
  height: 60rpx;
  margin-right: 12rpx;
}

/* 紧凑型文字样式 */
.problem-item.compact .problem-title {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.problem-item.compact .problem-desc {
  font-size: 22rpx;
}