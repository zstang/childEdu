/* pages/index/who_are_you.wxss */
.page {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 0 30rpx;
}

/* 标题样式 */
.title-container {
  padding: 60rpx 0;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

/* 角色选项样式 */
.role-options {
  padding: 40rpx 0;
}

.role-item {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.role-item.selected {
  background-color: #07c160;
  color: #fff;
}

/* 按钮区域样式 */
.button-container {
  display: flex;
  justify-content: space-between;
  padding: 60rpx 0;
  gap: 30rpx;
}

.chat-btn, .consult-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

.chat-btn {
  background-color: #f0f0f0;
  color: #333;
}

.consult-btn {
  background-color: #07c160;
  color: #fff;
}